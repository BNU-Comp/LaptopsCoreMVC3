@model IEnumerable<LaptopsCoreMVC.Models.Laptop>

@{
    ViewData["Title"] = "Index";
}

<h2>Laptops List</h2>

<p>
    <a class="btn btn-info btn-sm" asp-action="Create">Create New</a>
</p>
<table class="table  table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RamSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemorySize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LaptopDimensions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperatingSystem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resolution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Processor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BatteryLife)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colour)
            </th>
            <th>
                Picture
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RamSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemorySize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LaptopDimensions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OperatingSystem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resolution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Processor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BatteryLife)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            <td>
                <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.LaptopID">Edit</a>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.LaptopID">Details</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.LaptopID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
